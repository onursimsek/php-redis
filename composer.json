{
    "name": "onursimsek/php-redis",
    "description": "Redis client for PHP",
    "keywords": [
        "redis",
        "cache",
        "no-sql"
    ],
    "homepage": "https://github.com/onursimsek/php-redis",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Onur Şimşek",
            "email": "posta@onursimsek.com"
        }
    ],
    "require": {
        "php": "^8.1|^8.2|^8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5.5",
        "friendsofphp/php-cs-fixer": "^3.46"
    },
    "autoload": {
        "psr-4": {
            "PhpRedis\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpRedis\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
